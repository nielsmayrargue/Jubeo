<div class="col-md-12">


<%= form_for(@track, html: { multipart: true, role: "form" }) do |f| %>

 	<div class="form-group">
    <%= f.label :titre %><br>
    <%= f.text_field :title, class: "form-control", placeholder: "Ex : apprendre à méditer en 10 jours" %>
  </div>

 	<div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control", placeholder: "Ex : apprenez les bases de la méditation pas à pas en 10 jours", id: "edit"  %>
  </div>

 	<div class="form-group">
    <%= f.label :prix_en_euro %><br>
    <%= f.number_field :price, class: "form-control", placeholder: "Ex : 10"  %>
  </div>

  <div class="form-group">
    <%= f.label "veuillez coller le lien de votre vidéo de présentation (Youtube ou Vimeo)" %><br>
    <%= f.text_field :intro_video, class: "form-control", placeholder: "Ex : https://www.youtube.com/watch?v=K46mp2U3wKE"  %>
  </div>

  <div class="form-group">
    <%= f.label :theme_list, "Thématiques du Coaching" %><br>
    <%= f.collection_check_boxes :theme_list, @all_themes, :name, :name, html_options = {class: "checkbox"} %>
  </div>

  <div class="form-group">
    <%= f.label "Lien vers une preuve scientifique" %><br>
    <%= f.text_field :proof, class: "form-control", placeholder: "Article de blog, vidéo..." %>
  </div>

  <div class="form-group">
    <%= f.label "Photo" %><br>
    <%= f.file_field :picture %>
  </div>

 	<button type="submit" class="btn btn-primary">Enregistrer</button>

 <% end %>

</div>

<script>
    $(function() {
        $('#edit').editable({inlineMode: false})
    });
</script>