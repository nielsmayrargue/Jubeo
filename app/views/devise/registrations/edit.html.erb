<h2>Editer mon profil</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, role: "form" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
      <%= f.label "Prénom & Nom" %><br />
      <%= f.text_field :full_name, class: "form-control login-field" %>
    </div>


  <div class="form-group">
      <%= f.label "photo de profil" %><br />
      <%= f.file_field :avatar, type: "file" %>
  </div>

  <div class="form-group"><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, class: "form-control" %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group"><%= f.label :biographie %><br />
  <%= f.text_area :bio, :autofocus => true, class: "form-control", id: "edit" %></div>

  <% unless current_user.provider %>

  <div class="form-group"><%= f.label :mot_de_passe %> <i><small>(laissez vide si vous ne voulez pas le changer)</small></i><br />
  <%= f.password_field :password, :autocomplete => "off", class: "form-control" %></div>

  <div class="form-group"><%= f.label :confirmation_du_mot_de_passe %><br />
  <%= f.password_field :password_confirmation, class: "form-control" %></div>

  <div class="form-group"><%= f.label :mot_de_passe_actuel %> <i><small><b></b></small></i><br />
  <%= f.password_field :current_password, class: "form-control" %></div>

  <% end %>

  <button type="submit" class="btn btn-primary">Enregistrer</button>

<% end %>

<h3>Supprimer mon compte</h3>

<p>Mécontent ? <%= button_to "Supprimer mon compte", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn btn-danger" %></p>

<script>
    $(function() {
        $('#edit').editable({inlineMode: false})
    });
</script>