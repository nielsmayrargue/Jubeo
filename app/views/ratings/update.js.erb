$('#star').raty({
    readOnly: true,
    score: <%= @track.average_rating %>,
    path: '/assets',
    starOff: '<%= File.basename(asset_path "star-off.png") %>',
    starOn: '<%= File.basename(asset_path "star-on.png") %>'
  });

  $('#user_star').raty({
    score: <%= @rating.score %>,
    path: '/assets',
    starOff: '<%= File.basename(asset_path "star-off.png") %>',
    starOn: '<%= File.basename(asset_path "star-on.png") %>',
    click: function(score, evt) {
      $.ajax({
        url: '/ratings/' + <%= @rating.id %>,
        type: 'PATCH',
        data: { score: score }
      });
    }
  });